<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frameLayoutAccEdit"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="765dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#Fefefe"
    tools:context=".AccEditFragment">

    <FrameLayout
        android:id="@+id/EditlayoutAbout2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/background_rounded3"
        android:backgroundTint="#848484"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="163dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/EditcardProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            android:layout_marginStart="145dp"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/EditimageProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/profile2"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/EdittextViewAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anna Marie"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="180dp"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/EditimageViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/acc_email"
        android:layout_marginStart="40dp"
        android:layout_marginTop="290dp"
        />

    <TextView
        android:id="@+id/EdittextViewAccEmail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email "
        android:textSize="15sp"
        android:textColor="#ADADAD"
        android:layout_marginStart="90dp"
        android:layout_marginTop="290dp"
        />

    <TextView
        android:id="@+id/EdittextViewAccEmail3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annam@gmail.com"
        android:textSize="20sp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="320dp" />


    <ImageView
        android:id="@+id/EditimageViewPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="360dp"
        android:src="@drawable/acc_person" />

    <TextView
        android:id="@+id/EdittextViewAccPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username "
        android:textSize="15sp"
        android:textColor="#ADADAD"
        android:layout_marginStart="90dp"
        android:layout_marginTop="360dp"
        android:contentDescription="username"
        />

    <EditText
        android:id="@+id/EdittextViewAccPerson2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="390dp"
        android:text="Anna Marie"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/EditimageViewPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/acc_phone"
        android:layout_marginStart="40dp"
        android:layout_marginTop="450dp"
        />

    <TextView
        android:id="@+id/EdittextViewAccPhone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="450dp"
        android:text="Telephone "
        android:textColor="#ADADAD"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/EdittextViewAccPhone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0812345"
        android:textSize="20sp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="480dp"
        />

    <ImageView
        android:id="@+id/EditimageViewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_key_24"
        android:layout_marginStart="41dp"
        android:layout_marginTop="540dp"
        />

    <TextView
        android:id="@+id/EdittextViewAccPass1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="15sp"
        android:textColor="#ADADAD"
        android:layout_marginStart="90dp"
        android:layout_marginTop="540dp"
        />

    <EditText
        android:id="@+id/EdittextViewAccPass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaa"
        android:textSize="20sp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="570dp"
        />

    <Button
        android:id="@+id/buttonSaveAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="650dp"
        android:layout_marginStart="160dp"
        android:backgroundTint="#f8d7da"
        android:textColor="@color/black"
        />

</FrameLayout>
